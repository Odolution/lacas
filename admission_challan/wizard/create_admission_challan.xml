<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_create_admission_challan_wizard_form" model="ir.ui.view">
        <field name="name">admission.challan.wizard.form</field>
        <field name="model">admission.challan.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Admission Challan">
                    <h5>Select Fee Template</h5>
                    <field name="template_id" />
                    <footer>
                    <button name="action_create_tuition_plan" string="Create" type="object" class="btn-primary"/>
                    <button name="action_discard" string="Discard" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_create_admission_challan_wizard" model="ir.actions.act_window">
        <field name="name">Create Admission Challan</field>
        <field name="res_model">admission.appointment.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_student_id': active_id}</field>
    </record>
</odoo>
