<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sincro_data_base_header_view_tree" model="ir.ui.view">
        <field name="name">sincro_data_base.header.view.tree</field>
        <field name="model">sincro_data_base.header</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="value"/>
                <field name="api_id"/>
            </tree>
        </field>
    </record>

    <record id="sincro_data_base_header_view_form" model="ir.ui.view">
        <field name="name">sincro_data_base.header.view.form</field>
        <field name="model">sincro_data_base.header</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name"/>
                        <field name="api_id" attrs="{'invisible': True}"/>
                    </group>
                    <group>
                        <field name="value"/>
                    </group>
                </group>
            </form>
        </field>
    </record>
</odoo>
