<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_res_school_facts_student_form_view">
        <field name="name">view.res.school.facts.student.form.view</field>
        <field name="model">school.student</field>
        <field name="inherit_id" ref="edoob.school_student_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet[1]" position="inside">
                <field name="id" invisible="1"/>
            </xpath>
            <xpath expr="//h1[1]/field[1]" position="after">
                <br/>
                <field name="facts_id" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_res_school_facts_student_kanban_view">
        <field name="name">view.res.school.facts.student.kanban.view</field>
        <field name="model">school.student</field>
        <field name="inherit_id" ref="edoob.school_student_view_kanban"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_kanban_record_title'][1]/field[1]" position="after">
                <br/>
                <field name="facts_id" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_res_school_facts_student_tree_view">
        <field name="name">view.res.school.facts.student.tree.view</field>
        <field name="model">school.student</field>
        <field name="inherit_id" ref="edoob.school_student_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="." position="inside">
                <field name="facts_id" widget="integer" options="{'format': 0}"/>
                <field name="facts_udid" string="UDID"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_res_school_facts_student_search_view">
        <field name="name">view.res.school.facts.student.search.view</field>
        <field name="model">school.student</field>
        <field name="inherit_id" ref="edoob.school_student_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="." position="inside">
                <field name="facts_id" />
                <field name="facts_udid" />
            </xpath>
        </field>
    </record>

</odoo>
