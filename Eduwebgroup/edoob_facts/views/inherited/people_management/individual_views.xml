<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_res_school_facts_family_individual_form_view">
        <field name="name">view.res.school.facts.family.individual.form.view</field>
        <field name="model">school.family.individual</field>
        <field name="inherit_id" ref="edoob.school_individual_view_form"/>
        <field name="arch" type="xml">

            <!--        SOLO PARA ASEGURARSE QUE TIENE UN ELEMENTO EN EL COTNENER SHEET PARA EL BOTON DE LA SINCRO, ESTO VA A CAMBIAR CUANDO SE CAMBIE LA CONDICION DEL MODULO
                        SINCRO_DATA_BASE-->
            <xpath expr="//sheet[1]" position="inside">
                <field name="id" invisible="1"/>
            </xpath>
            <xpath expr="//h1[1]/field[1]" position="after">
                <br/>
                <field name="facts_id" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_res_school_facts_family_individual_search_view">
        <field name="name">view.res.school.facts.family.individual.search.view</field>
        <field name="model">school.family.individual</field>
        <field name="inherit_id" ref="edoob.school_individual_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="." position="inside">
                <field name="facts_id" />
            </xpath>
        </field>
    </record>

</odoo>
